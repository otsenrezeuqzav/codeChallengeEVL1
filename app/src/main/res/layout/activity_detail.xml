        <!-- TextView ph -->

        <TextView
            android:id="@+id/ph"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/phLabel"
            app:layout_constraintTop_toBottomOf="@+id/srm" />


        <!-- TextView etiqueta attenuationlevel-->

        <TextView
            android:id="@+id/attenuationlevelLabel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="@string/attenuationlevel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ph" />

        <!-- TextView attenuationlevel -->

        <TextView
            android:id="@+id/attenuationlevel"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/attenuationlevelLabel"
            app:layout_constraintTop_toBottomOf="@+id/ph" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>